  display: flex;
  height: 100rpx;
  width: 75%;   /* 调整轮盘下便签的左边条的长度,实际长度为width/2 */
  background:rgba(80, 164, 233, 0.356);
  font-size:40rpx; 
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
}
.wheel-label wheel-label-text{
  height: 48rpx;
  width:300rpx;
}

.wheel-label-icon{
  position:relative;
  height:48rpx;
  width: 48rpx;
}

