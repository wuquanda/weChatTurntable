.wux-fab-button__label{
  position: absolute;
  top:50%;
  padding:8rpx 20rpx;
  font-size:100px;
  background:rgba(0, 0, 0, 0.185);
  border-radius:6rpx;
  color:rgba(15, 5, 5, 0.904);
  pointer-events:none;
  white-space:nowrap;
  opacity:1;box-sizing:border-box;
  transform:translate3d(0,-50%,0);
  transition:all .3s}

  .wux-fab-button__label{
